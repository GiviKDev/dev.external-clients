<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		
		<IsPackable>true</IsPackable>
		<PackageId>Dev.ExternalClients</PackageId>
		<Version>0.1.0.0</Version>
		<Title>External HTTP Clients Library</Title>
		<Authors>GiviKDev</Authors>
		<Description>A library for configuring external HTTP clients.</Description>
		<PackageTags>http;client;external</PackageTags>
		
		<RepositoryUrl>https://github.com/GiviKDev/dev.external-clients</RepositoryUrl>
		<Copyright>Copyright © 2025 GiviKDev</Copyright>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="../../LICENSE.txt" Pack="true" PackagePath="/" />
		<None Include="../../README.md" Pack="true" PackagePath="/" />
	</ItemGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

</Project>
